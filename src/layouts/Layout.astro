---
import '@fontsource-variable/manrope';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="../typescript/BST.ts"></script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--background-secondary: rgb(32, 54, 100);
		--background: #14213dff;
		--secondary: #fca311ff;
		--primary: #e5e5e5ff;
		--white: #ffffffff;
		--border-radius: 20px;
	}
	* {
		color: var(--primary);
		margin: 0;
		padding: 0;
	}
	html, input {
		font-family: 'Manrope Variable', sans-serif;
		background: var(--background);
		/* background-size: 224px; */
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	h1, h2, h3, h4 {
		text-transform: uppercase;
		text-align: left;
		vertical-align: middle;
	}
	h2, h3, h4 {
		color: var(--secondary);
	}
</style>
